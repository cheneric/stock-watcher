<resources>

	<!-- themes -->

	<style name="ToolbarTheme">
		<item name="android:background">@color/colorPrimary</item>
		<item name="titleTextColor">@color/textColorPrimary</item>
	</style>

	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
<!--
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
-->
		<item name="colorAccent">@color/colorAccent</item>
		<item name="titleTextColor">@color/textColorPrimary</item>
		<item name="android:textColor">@color/textColorSecondary</item>
	</style>

	<!-- styles -->

	<style name="TickerSymbol">
		<item name="android:layout_height">@dimen/stock_symbol_diameter</item>
		<item name="android:layout_width">@dimen/stock_symbol_diameter</item>
		<item name="android:background">@drawable/circle</item>
		<item name="android:gravity">center</item>
		<item name="android:textAppearance">@style/Title2.Light</item>
		<item name="android:textColor">@null</item>
	</style>

	<!-- fonts -->

	<style name="BaseFont"></style>

	<style name="Title1" parent="BaseFont">
		<item name="android:textSize">56sp</item>
	</style>

	<style name="Title1.Light">
		<item name="titleTextColor">@color/textColorPrimary</item>
	</style>

	<style name="Title2">
		<item name="android:textSize">50sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Title2.Light">
		<item name="android:textColor">@color/textColorPrimary</item>
	</style>

	<style name="Title3">
		<item name="android:textSize">18sp</item>
	</style>

	<style name="Subtext">
		<item name="android:textSize">16sp</item>
	</style>

</resources>
